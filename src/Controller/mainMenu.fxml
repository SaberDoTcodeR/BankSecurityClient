<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/8.0.181"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainMenuController">
    <GridPane fx:id="gridPane" prefHeight="400.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <children>
            <Button fx:id="startGame" id="button1" onMouseEntered="#balanceBtnActFocus"
                    onKeyPressed="#handleOnKeyPressedBalance" onMouseClicked="#balanceAct"
                    mnemonicParsing="false" prefHeight="50.0" prefWidth="400.0" text="BALANCE"
                    GridPane.rowIndex="1">

                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="Controller/css/balanceWhite.png"/>
                        </image>
                    </ImageView>

                </graphic>
            </Button>
            <Button fx:id="recordedMatch" id="button2" onKeyPressed="#handleOnKeyPressedRecordedMatch"
                    onMouseClicked="#recordedMatchAct" onMouseEntered="#recordedMatchBtnActFocus"
                    mnemonicParsing="false"
                    prefHeight="50.0" prefWidth="400.0" text="RECORDED MATCH"
                    GridPane.rowIndex="2">
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <!--<Image url="Controller/css/recordWhite.png"/>-->
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="shop" id="button3" onMouseEntered="#shopBtnActFocus" onKeyPressed="#handleOnKeyPressedShop"
                    onMouseClicked="#shopAct" mnemonicParsing="false" prefHeight="50.0"
                    prefWidth="400.0" text="SHOP"
                    GridPane.rowIndex="3">
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <!--<Image url="Controller/css/shopWhite.png"/>-->
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="collection" onKeyPressed="#handleOnKeyPressedCollection"
                    onMouseClicked="#collectionAct" id="button4" onMouseEntered="#collectionBtnActFocus"
                    mnemonicParsing="false"
                    prefHeight="50.0"
                    prefWidth="400.0" text="COLLECTION"
                    GridPane.rowIndex="4">
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <!-- <Image url="Controller/css/collectionWhite.png"/>-->
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="save" onMouseClicked="#saveBtnAct" id="button5" onMouseEntered="#saveBtnActFocus"
                    onKeyPressed="#handleOnKeyPressedLogOut"
                    mnemonicParsing="false" prefHeight="50.0"
                    prefWidth="400.0" text="SAVE"
                   
                    GridPane.rowIndex="5">
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <!--<Image url="Controller/css/saveWhite.png"/>-->
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="logOut" onMouseClicked="#logOutBtnAct" id="button6" onMouseEntered="#logOutBtnActFocus"
                    onKeyPressed="#handleOnKeyPressedLogOut"
                    prefHeight="50.0"
                    prefWidth="400.0" text="LOGOUT"
                   
                    GridPane.rowIndex="6">
                <graphic>
                    <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <!--<Image url="Controller/css/logoutWhite.png"/>-->
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Label fx:id="accountInfo"  >
                <!--<graphic>
                    <ImageView fx:id="profile" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true"
                               preserveRatio="true">

                    </ImageView>
                </graphic>-->
            </Label>
        </children>
    </GridPane>
</StackPane>